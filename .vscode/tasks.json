  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "publish",
      "command": "vsce",
      "isShellCommand": true,
      "args": [
        "publish"
      ]
    },
    {
      "taskName": "deploy",
      "command": "bash",
      "isBuildCommand": true,
      "isShellCommand": true,
      "args": [
