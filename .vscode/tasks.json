{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "runner": "terminal",
  "tasks": [
    {
      "label": "publish",
      "command": "vsce",
      "type": "shell",
      "args": [
        "publish"
      ]
    },
    {
      "label": "deploy",
      "command": "bash -c 'cp -rpv * $HOME/.vscode/extensions/rbolsius.theme-nightshade-*'",
      "group":"build",
      "type": "shell"
    }
  ]
}
